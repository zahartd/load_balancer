{
  "server": {
    "host": "localhost",
    "port": 8080
  },
  "balancer": {
    "algorithm": "round_robin",
    "health_check_interval_sec": 10
  },
  "backends": [
    {
      "url": "http://backend-1"
    },
    {
      "url": "http://backend-2"
    },
    {
      "url": "http://backend-3"
    }
  ],
  "rate_limit": {
    "algorithm": "token_bucket",
    "default_capacity": 100,
    "refill_pepiod_ms": 50
  },
  "db": {
    "dsn": "postgres://user:pass@db:5432/loadbalancer?sslmode=disable"
  }
}
